{
  "name": "ToughCookie",
  "description": "I'll handle those pesky cookie banners so you don't have to",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js",
    "popup_worker": "popup.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/tough-cookie16.png",
      "32": "/images/tough-cookie32.png",
      "48": "/images/tough-cookie48.png",
      "128": "/images/tough-cookie128.png"
    }
  },
  "icons": {
    "16": "/images/tough-cookie16.png",
    "32": "/images/tough-cookie32.png",
    "48": "/images/tough-cookie48.png",
    "128": "/images/tough-cookie128.png"
  },
}
